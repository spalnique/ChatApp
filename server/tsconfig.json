{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "@types": ["./src/@types"]
    }
  },
  "include": ["src/**/*"]
}
